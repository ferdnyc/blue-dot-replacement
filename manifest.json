{
	"manifest_version": 2,
	"name": "Blue Dot Replacement",
	"description": "Show a flashing alert icon when an unfocused tab's title changes.",
	"version": "1.1.1",
	"author": "Will Groenendyk",
	"options_ui": {
		"chrome_style": true,
		"page": "options.html",
		"open_in_tab": false
	},
	"background": {
		"persistent": false,
		"scripts": [ "bg.js" ]
	},
	"browser_action":
	{
		"default_icon": "img/alarm.png"
	} ,
	"web_accessible_resources" : [ "img/alarm.png" ],
	"short_name" : "BDR",
	"permissions": [
		"tabs",
		"storage",
		"https://*/*",
		"http://*/*"
	]
}
